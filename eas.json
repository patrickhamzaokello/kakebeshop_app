{
    "cli": {
      "version": ">= 16.17.3",
      "appVersionSource": "remote"
    },
    "build": {
      "development": {
        "developmentClient": true,
        "distribution": "internal",
        "env": {
          "APP_VARIANT": "development"
        }
      },
      "preview": {
        "distribution": "internal",
        "env": {
          "APP_VARIANT": "preview"
        }
      },
      "production": {
        "autoIncrement": true
      }
    },
    "submit": {
      "production": {}
    }
  }